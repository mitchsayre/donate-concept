{
  "name": "typescript-node-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "generate": "npx prisma generate --no-engine",
    "generate:watch": "npx prisma generate --no-engine --watch",
    "tailwind:watch": "npx tailwindcss -i ./assets/css/style.css -o ./assets/css/out.css --watch",
    "dev:build": "npm run clean && npm run generate && tsc -b ./client ./server",
    "dev:watch": "tsc -b ./client ./server --preserveWatchOutput -w",
    "dev:start": "nodemon ./dist/server/index.js",
    "dev": "npm run dev:build && concurrently -k 'npm:generate:watch' 'npm:tailwind:watch' 'npm:dev:start' 'npm:dev:watch'",
    "clean": "rm -rf ./dist",
    "build": "npm run dev:build",
    "postinstall": "npm run build",
    "prestart": "NODE_ENV=production npm run build",
    "start": "NODE_ENV=production node ./dist/server/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.556.0",
    "@prisma/client": "^5.6.0",
    "dotenv": "^16.4.5",
    "kysely": "^0.26.3",
    "pg": "^8.11.3",
    "prisma-kysely": "^1.7.1",
    "zod-prisma-types": "^3.1.6"
  },
  "devDependencies": {
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^6.12.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^20.12.2",
    "@types/pg": "^8.10.9",
    "concurrently": "^8.2.2",
    "fastify": "^4.25.1",
    "fastify-favicon": "^4.3.0",
    "fastify-plugin": "^4.5.1",
    "htmx.org": "^1.9.9",
    "nodemon": "^3.1.0",
    "pino-pretty": "^10.3.0",
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1",
    "prisma": "^5.6.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.2"
  }
}
