{
  "name": "typescript-node-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "generate": "npx prisma generate --no-engine",
    "generate:watch": "npx prisma generate --no-engine --watch",
    "dev:build": "npm run clean && tsc -b ./client ./server",
    "dev:watch": "tsc -b ./client ./server --preserveWatchOutput -w",
    "dev:start": "node --watch-preserve-output --watch-path ./dist/server ./dist/server/index.js",
    "dev": "npm run dev:build && conc -r -k 'npm:dev:start' 'npm:dev:watch'",
    "clean": "rm -rf ./dist",
    "build": "npm run dev:build",
    "postinstall": "npm run build",
    "prestart": "NODE_ENV=production npm run build",
    "start": "NODE_ENV=production node ./dist/server/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "kysely": "^0.26.3",
    "pg": "^8.11.3",
    "prisma-kysely": "^1.7.1"
  },
  "devDependencies": {
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^6.12.0",
    "@types/node": "^20.12.2",
    "@types/pg": "^8.10.9",
    "fastify": "^4.25.1",
    "fastify-favicon": "^4.3.0",
    "fastify-plugin": "^4.5.1",
    "htmx.org": "^1.9.9",
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1",
    "prisma": "^5.6.0",
    "typescript": "^5.3.2"
  }
}
